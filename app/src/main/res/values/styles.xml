<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--    sub styles      -->

    <!--    TEXT VIEWS  -->

    <style name="TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="paddingStart">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="TextView.Button" parent="TextView">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <item name="android:statusBarColor">#ffffff</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogStyle.Light</item>

        
    </style>

    <!--    BOTTOM SHEET DIALOG STYLE -->

    <style name="BottomSheetDialogStyle.Light" parent="AppBottomSheetDialogTheme.Light">
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="BottomSheetDialogStyle.Dark" parent="AppBottomSheetDialogTheme.Light">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">#ff000000</item>
    </style>

</resources>